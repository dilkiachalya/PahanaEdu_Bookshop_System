<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Pahana Edu</display-name>

    <!-- Servlet Declaration for AuthServlet -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.pahanaedu.controller.AuthServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for AuthServlet -->
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Welcome, File List: Tells Tomcat to automatically serve index.jsp
         when the root URL (e.g., /pahanaedu/) is accessed. -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- You can add other servlet declarations and mappings here as needed -->

</web-app>
